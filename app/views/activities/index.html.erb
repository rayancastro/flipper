<div class="fullbox">
  <div>
    <%= render 'shared/sidebar' %>
  </div>
  <div class="container">

    <h1>Atividades:</h1>

    <%= link_to 'Adicionar Atividade', new_activity_path, class: 'btn btn-primary' %>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Cod. Cliente</th>
      <th scope="col">Descrição</th>
      <th scope="col">Data</th>
      <th scope="col">Concluído</th>
    </tr>
  </thead>
   <tbody>

<% @activities.each do |activity| %>
  <tr>
    <%= link_to activity_path(activity) do %>

      <td scope="row"><%= activity.user_id %></td>
      <td><%= activity.description %></td>
      <td><%= activity.date %></td>
      <td><%= activity.done %></td>

    <% end %>
      </tr>
<% end %>

     </tbody>
    </table>
  </div>
</div>


