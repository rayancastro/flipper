<%= simple_form_for @lead do |f| %>
  <%= f.input :business_name, label: "Nome da Empresa" %>
  <%= f.input :revenue_cents, label: "Receita previsível" %>
  <%= f.input :closure_date, as: :date, label: "Data de fechamento" %>
  <%= f.input :user_id, collection: User.all, label: "Vendedor responsável" %>
  <%= f.input :sales_funnel_stage_id, collection: SalesFunnelStage.all, label: "Estágio do Funil" %>
  <%= f.input :lead_status_id, collection: LeadStatus.all, label: "Status atual" %>
  <%= f.input :website, label: "Website" %>
  <%= f.input :address, label: "Endereço" %>
  <%= f.input :city, label: "Cidade" %>
  <%= f.input :state, label: "Estado" %>

  <% unless @lead.id %>
    <%= f.submit "Criar Lead", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Editar Lead", class: "btn btn-primary" %>
  <% end %>
<% end %>